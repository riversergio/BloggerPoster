<div class="controller-bar">
    <div class="d-flex">
        <div class="btn-group shadow">
            <button title="Xem nội dung" id="showContent" class="btn btn-primary btn-sm active"><i
                    class="fas fa-align-justify"></i></button>
            <button title="Xem code" id="showCode" class="btn btn-primary btn-sm"><i class="fas fa-code"></i></button>
        </div>
        <div class="dropdown">
            <button class="btn shadow btn-sm ml-2 btn-light dropdown-toggle" type="button" id="headingButtons"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Tiêu đề
            </button>
            <div class="dropdown-menu" aria-labelledby="headingButtons">
                <button type="button" id='largeTitle' class="btn-sm dropdown-item">
                    <h4 class='m-0'>Tiêu đề lớn</h4>
                </button>
                <button type="button" id='largeTitle' class="btn-sm dropdown-item">
                    <h5 class='m-0'>Tiêu đề vừa</h5>
                </button>
                <button type="button" id='largeTitle' class="btn-sm dropdown-item">
                    <h6 class='m-0'>Tiêu đề nhỏ</h6>
                </button>
                <button type="button" id='normalText' class="btn-sm dropdown-item">
                    <p class='m-0'>Văn bản</p>
                </button>
            </div>
        </div>
        <div class="btn-group shadow ml-2">
            <button title="In đậm" id="boldText" class="btn btn-light btn-sm"><i class="fas fa-bold"></i></button>
            <button title="In nghiêng" id="italicText" class="btn btn-light btn-sm"><i
                    class="fas fa-italic"></i></button>
            <button title="Gạch chân" id="italicText" class="btn btn-light btn-sm"><i
                    class="fas fa-underline"></i></button>
        </div>
        <div class="btn-group shadow ml-2">
            <button title="Căn lề trái" id="alignLeft" class="btn btn-light btn-sm">
                <i class="fas fa-align-left"></i>
            </button>
            <button title="Căn lề giữa" id="alignCenter" class="btn btn-light btn-sm">
                <i class="fas fa-align-center"></i>
            </button>
            <button title="Căn lề phải" id="alignRight" class="btn btn-light btn-sm">
                <i class="fas fa-align-right"></i>
            </button>
            <button title="Căn lề đều" id="alignJustify" class="btn btn-light btn-sm">
                <i class="fas fa-align-justify"></i>
            </button>
        </div>
        <div class="btn-group shadow ml-2">
            <button title="Liên kết" id="addLink" class="btn btn-light btn-sm">
                <i class="fas fa-link"></i>
            </button>
            <button title="Danh sách không thứ tự" id="ulList" class="btn btn-light btn-sm">
                <i class="fas fa-list-ul"></i>
            </button>
            <button title="Danh sách có thứ tự" id="olList" class="btn btn-light btn-sm">
                <i class="fas fa-list-ol"></i>
            </button>
        </div>
    </div>
</div>